generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id                 String   @id // La cédula será el ID
  firstName          String
  lastName           String
  documentDepartment String? 
  documentPlace      String?  
  gender             String
  ethnicity          String?  
  personalEmail      String   @unique
  institutionalEmail String   @unique
  mobilePhone        String?  
  landlinePhone      String?  
  birthDate          DateTime
  nationality        String
  //TimeStamps
  createdAt          DateTime
  updatedAt          DateTime
}

